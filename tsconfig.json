{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"strict": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"paths": {
			"*": ["./dist/types/*", "./dist/schema/*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"lib": ["ES2015", "dom", "ES2019.object"]
	},
	"include": ["src/**/*", "types/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
